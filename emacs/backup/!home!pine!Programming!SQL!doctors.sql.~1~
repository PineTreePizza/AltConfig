CREATE TABLE пациенты (
			 ID INT AUTO_INCREMENT,
			 имя VARCHAR(50) NOT NULL,
			 возраст INT NOT NULL,
			 пол ENUM('М', 'Ж') NOT NULL,
			 адрес VARCHAR(100),
			 PRIMARY KEY (ID)
);

INSERT INTO пациенты (имя, возраст, пол, адрес) VALUES
			 ('Иван Иванов', 35, 'М', 'Москва, Россия'),
			 ('Елена Смирнова', 42, 'Ж', 'Санкт-Петербург, Россия'),
			 ('Алексей Петров', 28, 'М', 'Москва, Россия'),
			 ('Мария Лебедева', 55, 'Ж', 'Краснодар, Россия'),
			 ('Дмитрий Волков', 40, 'М', 'Астана, Казахстан');

CREATE TABLE врачи (
			 ID INT AUTO_INCREMENT,
			 имя VARCHAR(50) NOT NULL,
			 специальность VARCHAR(50) NOT NULL,
			 PRIMARY KEY (ID)
);

INSERT INTO врачи (имя, специальность) VALUES
			 ('Анна Смирнова', 'Терапевт'),
			 ('Александр Иванов', 'Хирург'),
			 ('Елена Петрова', 'Невролог'),
			 ('Иван Сидоров', 'Кардиолог'),
			 ('Ольга Козлова', 'Педиатр');

CREATE TABLE отделения (
			 ID INT AUTO_INCREMENT,
			 название VARCHAR(50) NOT NULL,
			 PRIMARY KEY (ID)
);

INSERT INTO отделения (название) VALUES
			 ('Терапевтическое отделение'),
			 ('Хирургическое отделение'),
			 ('Неврологическое отделение'),
			 ('Кардиологическое отделение'),
			 ('Педиатрическое отделение');

CREATE TABLE болезни (
			 ID INT AUTO_INCREMENT,
			 название VARCHAR(100) NOT NULL,
			 PRIMARY KEY (ID)
);

INSERT INTO болезни (название) VALUES
			 ('Грипп'),
			 ('Аппендицит'),
			 ('Мигрень'),
			 ('Ишемическая болезнь сердца'),
			 ('Ангина');

CREATE TABLE история_болезней (
			 ID INT AUTO_INCREMENT,
			 идентификатор_пациента INT NOT NULL,
			 идентификатор_врача INT NOT NULL,
			 идентификатор_отделения INT NOT NULL,
			 идентификатор_болезни INT NOT NULL,
			 описание TEXT,
			 дата DATE,
			 PRIMARY KEY (ID),
			 FOREIGN KEY (идентификатор_пациента) REFERENCES пациенты(ID),
			 FOREIGN KEY (идентификатор_врача) REFERENCES врачи(ID),
			 FOREIGN KEY (идентификатор_отделения) REFERENCES отделения(ID),
			 FOREIGN KEY (идентификатор_болезни) REFERENCES болезни(ID)
);

INSERT INTO история_болезней (идентификатор_пациента, идентификатор_врача, идентификатор_отделения, идентификатор_болезни, описание, дата) VALUES
			 (1, 2, 2, 4, 'Пациент жалуется на давящую боль в груди.', '2023-06-01'),
