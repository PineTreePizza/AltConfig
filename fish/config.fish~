function fish_prompt
    set -l textcol  black
    set -l bgcol    red
    set -l arrowcol red
    set_color $textcol -b $bgcol
    echo -n " "(basename $PWD)" "
    set_color $arrowcol -b normal
    echo -n "â–¶"
end
