client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color $indicate
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color $indicate
client.urgent           $urgent-bg-color    $urgent-bg-color   $urgent-text        $indicate

